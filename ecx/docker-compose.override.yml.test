version: "2"
services:
  app:
    image: iucn/ecolex_web:20210701
    container_name: ecolex_app
    ports:
      - "127.0.0.1:8000:8000"
    restart: "unless-stopped"

  solr8:
    image: library/solr:8
    container_name: ecx_solr
    environment:
      SOLR_JAVA_MEM: "-Xms512m -Xmx4g"
      TZ: ${TZ}
    volumes:
      - ecolex_solr:/var/solr/data
      - ./solr/ecolex_initial_conf:/core-template/ecolex_initial_conf:ro
    entrypoint:
      - docker-entrypoint.sh
      - solr-precreate
      - ecolex 
      - /core-template/ecolex_initial_conf
    ports:
      - "127.0.0.1:8983:8983" 
    logging:
        options:
            max-size: "10m"
            max-file: "3" 
    restart: "unless-stopped"

  maria:
    image: mariadb:10
    container_name: ecx_db
    environment:
      TZ: ${TZ}
      MYSQL_DATABASE: ${MYSQL_DATABASE}
      MYSQL_USER: ${MYSQL_USER} 
      MYSQL_PASSWORD: ${MYSQL_PASSWORD}
      MYSQL_ROOT_PASSWORD: ${MYSQL_ROOT_PASSWORD}
    volumes:
      - ecolex_db:/var/lib/mysql
    logging:
      driver: json-file
    restart: "no"
    command: ["--character-set-server=utf8mb4",
              "--collation-server=utf8mb4_unicode_ci",
              "--query-cache-size=128M",
              "--max-allowed-packet=256M",
              "--max-connections=256",
              "--max-heap-table-size=128M",
              "--tmp_table_size=128M",
              "--query_cache_limit=6M",
              "--innodb-buffer-pool-size=1024M",
              "--slow-query-log=1" ,
              "--innodb-log-file-size=300M"
              ]

volumes:
  ecolex_db:
    driver: local

  ecolex_solr:
    driver: local
